{% extends 'base.html.twig' %}

{% block title %}Ajouter un article{% endblock %}

{% block javascripts %}

    {{ parent() }}

    <script src="https://cdn.ckeditor.com/ckeditor5/35.1.0/classic/ckeditor.js"></script>


{% endblock %}

{% block body %}

    {% if article is not defined %}
        <h1 class="text-center my-3">Ajouter un article</h1>
    {% else %}
        <h1 class="text-center my-3">Modifier l'article {{ article.title }}</h1>     
    {% endif %}


    

    <div class="row">
        <div class="col-8 mx-auto my-3">
            {{ form(form) }}
        </div>
    </div>

{% endblock %}