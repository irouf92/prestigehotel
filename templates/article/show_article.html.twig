{% extends "base.html.twig" %}

{% block title %}
	{{ article.alias }}
{% endblock %}

{% block body %}

	<div class="row">
		<div class="col-10 mx-auto my-4">
			{% include "include/_flashes.html.twig" %}
		</div>
	</div>

	<div class="row">
		<div class="col-10 mx-auto mb-4 bg-card">

			<div class="">
				<div class="">
					<h1 class="text-center m-4">{{ article.title }}</h1>
					<h4 class="text-center text-secondary mb-4">{{ article.subtitle }}</h4>
				</div>
				<ul class="list-group list-custom">
					<li class="text-center bg-author">Cr√©e
						{{ article.createdAt | ago(locale='fr')}}
						| Par
						<span>{{ article.author.fullname }}</span>
					</li>
				</ul>
				<img src="{{ asset('uploads/' ~ article.photo) }}" alt="{{ article.title }}" class="img-fluid">
				<div class="card-body">
					<p class="card-text col-8 mx-auto my-4 text-justify">{{ article.content | raw }}</p>
				</div>
			</div>

		</div>
	</div>

{% endblock %}
